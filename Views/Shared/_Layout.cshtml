<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>DFlip / PDF Viewer</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link href="@Url.Content("~/dflip/css/dflip.min.css")" rel="stylesheet" type="text/css">
    <link href="@Url.Content("~/dflip/css/themify-icons.min.css")" rel="stylesheet" type="text/css">

    <style>
        .pdf-item {
            margin-bottom: 15px;
            display: flex;
            align-items: center;
            gap: 10px;
        }

        #pdf-container {
            background: #f4f4f4;
            padding: 20px;
            border-radius: 8px;
            min-height: 600px;
        }
    </style>
</head>
<body>

    <div class="container">
        @RenderBody()
    </div>

    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>

    <script src="@Url.Content("~/dflip/js/dflip.min.js")" type="text/javascript"></script>

    <script>
        $(document).ready(function () {

            $('.btn-view').click(function () {

                var fileName = $(this).data('filename');
                var $container = $('#pdf-container');

                $container.html('<div style="text-align:center;padding-top:100px">Đang tải PDF...</div>');

                $.get('/Home/GetPdf', { fileName: fileName }, function (res) {

                    console.log("URL nhận được:", res.url);

                    if (!res || !res.url) {
                        $container.html('<div style="color:red">Không lấy được PDF</div>');
                        return;
                    }

                    // ❗ BẮT BUỘC: remove hoàn toàn node cũ
                    $container.empty();

                    // ❗ TẠO LẠI HTML declarative (GIỐNG HỆT BẠN MUỐN)
                    var html = `
                        <div class="_df_book"
                             height="500"
                             webgl="true"
                             backgroundcolor="teal"
                             source="${res.url}"
                             id="df_manual_book">
                        </div>
                    `;

                    $container.html(html);

                    // ❗ ÉP DearFlip scan lại DOM
                    if (window.DFLIP && DFLIP.parseBooks) {
                        DFLIP.parseBooks();
                    }
                });
            });

        });

    </script>

</body>
</html>